[{"text": "Resolution adopted by the General Assembly on 8 September 2006", "type": "frontmatter", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "[without reference to a Main Committee (A/60/L.63 and Add.1)]", "type": "frontmatter", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "60/287.  The Peacebuilding Fund", "type": "title", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "The General Assembly,", "type": "paragraph", "heading_level": null, "paragraph_type": "preambular", "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Recalling the 2005 World Summit Outcome,", "type": "paragraph", "heading_level": null, "paragraph_type": "preambular", "paragraph_level": null, "prefix": null, "action_verb": "Recalling", "action_verb_type": "preambular", "action_verb_normalized": "recall", "links": []}, {"text": "Recalling also its resolution 60/180 and Security Council resolution 1645 (2005) of 20 December 2005 on the operationalization of the Peacebuilding Commission, in particular paragraphs 24 and 25 thereof,", "type": "paragraph", "heading_level": null, "paragraph_type": "preambular", "paragraph_level": null, "prefix": null, "action_verb": "Recalling", "action_verb_type": "preambular", "action_verb_normalized": "recall", "links": []}, {"text": "Takes note of the arrangements for establishing the Peacebuilding Fund as contained in the report of the Secretary-General and the terms of reference for the Fund contained in the annex thereto;", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "1.", "action_verb": "Takes", "action_verb_type": "operative", "action_verb_normalized": "tak", "links": []}, {"text": "Affirms its role to provide overall policy guidance on the use of the Fund to maximize its impact and improve its functioning;", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "2.", "action_verb": "Affirms", "action_verb_type": "operative", "action_verb_normalized": "affirm", "links": []}, {"text": "Welcomes the contributions and financial pledges already made to the Fund, and emphasizes the necessity of sustained contributions in order to enhance the capacity of the Fund to immediately release the resources needed to launch post-conflict peacebuilding activities;", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "3.", "action_verb": "Welcomes", "action_verb_type": "operative", "action_verb_normalized": "welcom", "links": []}, {"text": "Urges all Member States to consider making voluntary contributions to the Fund;", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "4.", "action_verb": "Urges", "action_verb_type": "operative", "action_verb_normalized": "urg", "links": []}, {"text": "Requests the Secretary-General to submit an annual report to the General Assembly on the operation and activities of the Fund;", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "5.", "action_verb": "Requests", "action_verb_type": "operative", "action_verb_normalized": "request", "links": []}, {"text": "Decides to include in the draft agenda of its sixty-first session an item entitled “Report of the Secretary-General on the Peacebuilding Fund”.", "type": "paragraph", "heading_level": null, "paragraph_type": "operative", "paragraph_level": 1, "prefix": "6.", "action_verb": "Decides", "action_verb_type": "operative", "action_verb_normalized": "decid", "links": []}, {"text": "99th plenary meeting\n8 September 2006", "type": "backmatter", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}]