[{"text": "<!-- Page 1 -->", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": " Resolutions Adopted on the Reports of the Sixth Committee Resolutions Adoptees Sur Les Rapports De La Sixieme Commission", "type": "heading", "language": "english", "heading_level": 1, "paragraph_type": null, "paragraph_level": null, "prefix": "XVI", "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "167 (II). United Nations Flag", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "The General Assembly", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Recognizes that it is desirable to adopt a distinctive flag of the United Nations and to authorize its use and, therefore,", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Resolves that the flag of the United Nations shall be the official emblem adopted by the General Assembly under the terms of its resolution 92 (I) of 7 December 1946,¹ centred on a light blue ground;", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Directs the Secretary-General to draw up regulations concerning the dimensions and proportions of the flag;", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Authorizes the Secretary-General to adopt a flag code, having in mind the desirability of a regulated use of the flag and the protection of its dignity.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Ninety-sixth plenary meeting,", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "20 October 1947.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "168 (III). United Nations Day", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "The General Assembly", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Declares that 24 October, the anniversary of the coming into force of the Charter of the United Nations, shall henceforth be officially called “United Nations Day” and shall be devoted to making known to the peoples of the world the aims and achievements of the United Nations and to gaining their support for the work of the United Nations;", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Invites Member Governments to co-operate with the United Nations in securing observance of this anniversary.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Hundred and first plenary meeting,", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "31 October 1947.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "169 (III). Agreement between the United Nations and the United States of America regarding the Headquarters of the United Nations", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "A", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "The General Assembly,", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Whereas the Secretary-General pursuant to resolution 99 (I)² of 14 December 1946 signed with the Secretary of State of the United States of America on 26 June 1947 an Agreement between the United Nations and the United States of America regarding the Headquarters of the United Nations, and", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Whereas the Secretary-General in accordance with the said resolution has submitted the said Agreement to the General Assembly;", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "¹ See Resolutions adopted by the General Assembly during the second part of its first session, pages 185-186.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "² See Resolutions adopted by the General Assembly during the second part of its first session, page 195.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "167 (III). Drapeau de l’Organisation des Nations Unies", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "L’Assemblée générale", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Reconnaît qu’il est souhaitable d’adopter un drapeau distinctif de l’Organisation des Nations Unies et d’en autoriser l’emploi et, en conséquence,", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Décide que le drapeau de l’Organisation des Nations Unies sera l’emblème officiel adopté par l’Assemblée générale aux termes de sa résolution 92 (I) du 7 décembre 1946¹, au centre d’un fond bleu pâle;", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Charge le Secrétaire général de fixer les règles concernant les dimensions et les proportions du drapeau;", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Autorise le Secrétaire général à adopter un code du drapeau en vue de réglementer l’emploi et de protéger la dignité dudit drapeau.", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Quatre-vingt-seizième séance plénière,", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "le 20 octobre 1947.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "168 (III). Journée des Nations Unies", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "L’Assemblée générale", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Déclare que le 24 octobre, jour anniversaire de l’entrée en vigueur de la Charte des Nations Unies, sera désormais appelé officiellement “Journée des Nations Unies” et sera consacré à faire connaître les buts et les réalisations de l’Organisation des Nations Unies aux peuples du monde et à gagner leur appui à l’œuvre de l’Organisation des Nations Unies;", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Invite les Gouvernements des Etats Membres à coopérer avec l’Organisation en vue de faire observer cet anniversaire.", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Cent-unième séance plénière,", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "le 31 octobre 1947.", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "169 (III). Accord entre l’Organisation des Nations Unies et les Etats-Unis d’Amérique relatif au siège de l’Organisation des Nations Unies", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "A", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "L’Assemblée générale,", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Considérant qu’en exécution de la résolution 99 (I)² le Secrétaire général a signé avec le Secrétaire d’Etat des Etats-Unis d’Amérique le 26 juin 1947 un Accord entre l’Organisation des Nations Unies et les Etats-Unis d’Amérique relatif au siège de l’Organisation des Nations Unies; et", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "Considérant que le Secrétaire général a, en conformité de ladite résolution, soumis cet accord à l’Assemblée générale;", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "¹ Voir les Résolutions adoptées par l’Assemblée générale pendant la seconde partie de sa première session, pages 185-186.", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "² Voir les Résolutions adoptées par l’Assemblée générale pendant la seconde partie de sa première session, page 195.", "type": "frontmatter", "language": "french", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}, {"text": "91", "type": "frontmatter", "language": "english", "heading_level": null, "paragraph_type": null, "paragraph_level": null, "prefix": null, "action_verb": null, "action_verb_type": null, "action_verb_normalized": null, "links": []}]